<Page x:Class="ZadI.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZadI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="MainPage">

    <Grid Background="#FF28B29F">
        <Image x:Name="bitmap" Height="400" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Click to load an image!" Margin="80,0,0,22" Background="#FFDCC117" Click="button_Click" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="340"/>

    </Grid>
</Page>
